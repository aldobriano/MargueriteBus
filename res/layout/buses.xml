<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF"
  >
  
<ImageView
	android:id="@+id/busLineImage"
	android:layout_width="100px" 
	android:layout_height="70px"
	android:layout_marginLeft="20px"
	    
    >
</ImageView>

<TextView
	android:id="@+id/busServiceTo"
	android:text="On time"
	android:layout_width="190px" 
	android:layout_height="70px"
	android:layout_toRightOf="@+id/busLineImage"
	android:gravity="center_vertical"
	android:layout_marginLeft="20px"
	android:textSize="17px"
	android:textColor="#000000"    
    >
</TextView>

<TextView
	android:id="@+id/busTime"
	android:layout_width="110px" 
	android:layout_height="70px"
	android:layout_toRightOf="@+id/busServiceTo"
	android:gravity="center"
	android:layout_marginLeft="20px"
	android:padding="5px"
	android:text="Just left"
	android:textSize="55px"
	android:textStyle="bold"
	android:textColor="#000000" 
	android:background="@drawable/boxgrey" 
    >
</TextView>

<ImageView 
	android:id="@+id/headerlineblack" 
	android:layout_width="fill_parent"
	android:layout_height="1px"
	android:layout_below="@+id/busLineImage"
	android:background="#000000"
	>
</ImageView>  
  
</RelativeLayout>
